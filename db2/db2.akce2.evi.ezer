    check slovaci [171,26,76,17] { title:'Slováci', format:'t', help:"zohledňuje i rodinnou adresu" }
    check cizinci [171,51,76,17] { title:'jiní cizinci', format:'t', help:"zohledňuje i rodinnou adresu" }
