//      menu_item.click();
//  }}
  field id_dopis [L+307,38,43,17] { data:dopis.id_dopis, title:'^ID dopisu', format:'rd' }
  field predmet [L+10,72,340,17] { data:dopis.nazev, title:'^předmět mailu', help:'předmět|předmět emailu', 
