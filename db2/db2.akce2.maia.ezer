# -------------------------------------------------------------------------------------------- vzory
# formulář pro opravu dopisu typ='potvrzeni_platby' ve variantě podle access
form _vzory {
  var dopisy: array,
      i_dopisy= -2,
      vars: text
  func Init(typ) { 
    dopisy= php.dop_ids_where(`typ='${typ}' AND access&${my_access}`);
    if (array_length(dopisy)) {
      i_dopisy= 0; form.enable(1,'but'); 
      switch (typ) {
        case 'potvrzeni_platby': vars= `<b>v mailu lze používat proměnné:</b>
          <br>{platba_den} = z karty Platba
          <br>{platba_castka} = z karty Platba
          <br>{vyrizuje} = "vyřizuje" z os.nastavení`;
          break;
        case 'rozpis_platby': vars= `<b>v mailu lze používat proměnné:</b>
          <br>{platba_ss} = specifický symbol
          <br>{platba_vs} = variabilní symbol (6 čislic rodného čísla)
          <br>{akce_cena} = rozpis platby s QR kódem`;
          break;
      }
      vars= `${vars}
          <br>{platba_akce} = název akce
          <br>{vyrizuje} = "vyřizuje" z os.nastavení
          <br>{pratele} = vloží název rodiny, nebo slovo 'přátelé'`;
      vars= `<div style="float:right;padding:5px;line-height:1.5;margin-right: 15px" class="ae_work">${vars}</div>`;
      Show();
    }
    else {
      form.enable(0,'but'); txt= ''; vars= '';
      alert(`Není žádný vzor pro ${typ}. Požádej o založení.`);
    }
  }
  func Show() {
    form.load('',`id_dopis=${dopisy[i_dopisy]}`);
    txt= `${vars}<b>${i_dopisy+1}/${array_length(dopisy)}: ${nazev} <i>na akci (název akce)</i></b><br><br>${obsah}`;
  }
  function Next() {
    i_dopisy++; 
    if (i_dopisy>=array_length(dopisy)) i_dopisy= 0;
  }
  button jiny [-96,8,,] { tag:'but', title:'[fa-arrow-right] Jiný dopis', style:'zIndex:2'
    func onclick() {
      Next(); Show();
  }}
  button opravit [-24,8,,] { tag:'but', title:'[fa-edit] Upravit', style:'zIndex:2'
    func onclick() {
      dopis_id= id_dopis; E_dopis.modal(50,50); Show();
  }}
  label txt [0,40,*,]
//  label vars [-25,40,200,] { css:'ae_work', style:'padding:5px;line-height:1.5' }
  field id_dopis { data:dopis.id_dopis }
  field nazev    { data:dopis.nazev }
  field obsah    { data:dopis.obsah }
}
