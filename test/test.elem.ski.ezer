use v: form ff [0,0,,]
form ff [,,100,80] {
  button [0,0,,] { title:"smím 'y'?"
    proc onclick() { info.set(has_skill('y')) }
  }
  button [100,0,,] { title:"smím měnit?"
    proc onclick() { info.set(conc(y1.skill,':',y2.skill,/*':',x1.skill,*/':',x2.skill)) }
  }
  label x1 [0,30,100, 30] { title:'vidí mě jen x', skill:'x' }
  label x2 [0,60,100, 30] { title:'vidí mě jen y', skill:'y' }
  field y1 [200,60,100, ] { value:'y mě mění', skill:'y|y' }
  field y2 [400,60,100, ] { value:'y mě vidí', skill:'y' }
  label info [0,90,500,200] { title:'?' }
}
