use v: form f [10,10,,]
proc onstart() { v.focus }
proc v.b.onrowclick(i) { echo('klíč:',i,' tx=',v.b.tx.get) }
form f [,,110,30] {
  label l [0,0,150,] {title:'test browse'}
  browse b [0,20,100,15] { rows:3, qry_rows:1, css_rows:'id,7:blue'
    show id [,,40,] { title:'ID', data:t.id_t, format:'rs', map_pipe:m.tx }
    show tx [,,0,] { title:'TX', data:t.tx, format:'q*s-' }
    show dt [,,80,] { title:'DT', data:t.datum, format:'q*s-', css_cell:'id,1:green' }
    show nic [,,0,] { data:t.tx  }
    proc onchange() { echo('změna dotazu',b.get_query) }
    proc onsubmit(k) { echo('dvojklik id=',k,' a tx=',tx.get,' a id=',id.get) }
  }
  button [300,20,50,] { title:'load'
    proc onclick() { b.browse_load }
  }
  button [300,50,50,] { title:'read'
    proc onclick() { alert('{id:',b.id.get,',tx:',b.tx.get,'}') }
  }
  button [300,80,50,] { title:'seek'
    proc onclick() { b.browse_seek }
  }
}
