menu test { title:'test', type:'main'
  tabs t  {title:"[fa-graduation-cap] Test"
    panel p { type:'plain', title:'browse+select'
      func onfirstfocus() { f.b.browse_load() }
      use f: form {
        view t: table _jmena
        select s [100,10,50,] { type:'map', options:m.zkratka }
        browse b [10,10,,] { rows:5, qry_rows:2
          show bs [,,50,] { title:'s' format:'q#' data:t.sex map_pipe:m.zkratka }
        }
      }
    }
  }
  map m:   table _cis   {where:"druh='ms_akce_sex'", order:'ikona', key_id:'data'}
}
table _cis { key_id:'id_cis'
  number id_cis text druh, text data, text zkratka, number poradi,
  text hodnota, text popis, text barva, text ikona
}
table _jmena { key_id:'id_jmena'
  number id_jmena
  text   jmeno
  number cetnost
  number sex
}
